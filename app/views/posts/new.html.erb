<div class="jumbotron">
  <h2>New Post!</h2>
  <%= form_for @post do |f| %>
    <% if @post.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid.</h2>
        <ul>
          <% for message in @post.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= f.label :description %>
      <br>
      <%= f.text_field :description %>
    </div>
    <div class="field">
      <%= f.label :site_found %>
      <br>
      <%= f.text_field :site_found %>
    </div>
    <div class="field">
      <%= f.label :img_uri %>
      <br>
      <%= f.text_field :img_uri %>
    </div>
    <br>
    <div class="actions"><%= f.submit %></div>
  <% end %>
</div>
