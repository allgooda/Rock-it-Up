  <% @posts.each do |f| %>
  <div class='front'>


    <div class='image'>
      <a href='/posts/<%= f.id %>'>
        <img><%= image_tag (f.img_uri) %></img>
      </a>
        <h3 id='label'><%= f.user.name %><br><%= f.site_found %></h3>
    </div>
    <div>
      <%= f.description %>
    </div>
  </div>
  <% end %>



